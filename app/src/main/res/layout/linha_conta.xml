<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/cardLinha"
    cardview:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white"
        android:padding="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iconUser"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="ImgUser"
            android:src="@drawable/ic_user_circle_24" />

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nomeCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome cliente"
                android:textColor="@color/neutral"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/infoConta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/neutral"
                android:text="nÃºmero e saldo da conta"
                android:textSize="15sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/icone"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="Icone"
            android:src="@drawable/positive_balance" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
